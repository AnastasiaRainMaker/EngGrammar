<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.anastasia.enggrammar">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".GrammarActivity"
            android:launchMode="singleTask"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".AboutActivity"
            android:parentActivityName=".GrammarActivity"/>
        <activity android:name=".TestsActivity"
            android:parentActivityName=".GrammarActivity"/>
        <activity android:name=".TopicGrActivity"
            android:parentActivityName=".GrammarActivity"/>
        <activity android:name=".TopicTestsList"
            android:parentActivityName=".TopicGrActivity"/>
        <activity android:name=".SingleTestActivity"
            android:parentActivityName=".TopicTestsList"/>
    </application>

</manifest>