<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="bottom"
    android:orientation="vertical"
   >

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/gradient">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bird"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.037"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.556" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/nautilus"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="38sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.568"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.567" />

        <ImageView
            android:id="@+id/img_drawer_close"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginBottom="64dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/arrow_back"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.974"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.094" />

    </android.support.constraint.ConstraintLayout>


    <LinearLayout
        android:id="@+id/drawer_row1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">
        <ImageView
            android:background="@drawable/read"
            android:layout_marginStart="20dp"
            android:layout_weight="0"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:id="@+id/menu_grammar"
            android:clickable="true"
            android:focusable="true"
            android:textSize="18sp"
            android:gravity="center_vertical"
            android:text="@string/grammar"
            android:layout_marginStart="20dp"
            android:layout_gravity="center_vertical"
            android:layout_weight = "1"
            android:layout_height="40dp"
            android:layout_width="0dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/drawer_row2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_gravity="center_vertical"
            android:background="@drawable/tests"
            android:layout_marginStart="20dp"
            android:layout_weight="0"
            android:layout_width="40dp"
            android:layout_height="40dp"
            />
        <TextView
            android:id="@+id/menu_tests"
            android:clickable="true"
            android:focusable="true"
            android:textSize="18sp"
            android:gravity="center_vertical"
            android:text="@string/tests"
            android:layout_marginStart="20dp"
            android:layout_gravity="center_vertical"
            android:layout_weight = "1"
            android:layout_height="40dp"
            android:layout_width="0dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/drawer_row3"
        android:layout_marginBottom="120dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">
        <ImageView
            android:background="@drawable/about"
            android:layout_marginStart="20dp"
            android:layout_weight="0"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:id="@+id/menu_about"
            android:clickable="true"
            android:focusable="true"
            android:textSize="18sp"
            android:gravity="center_vertical"
            android:text="@string/about"
            android:layout_marginStart="20dp"
            android:layout_gravity="center_vertical"
            android:layout_weight = "1"
            android:layout_height="40dp"
            android:layout_width="0dp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/exit_drawer"
        android:focusable="true"
        android:clickable="true"
        android:background="@drawable/exit"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"
        android:layout_width="40dp"
        android:layout_height="40dp" />



</LinearLayout>